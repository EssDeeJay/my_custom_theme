    },
	{
      "type": "url",
      "id": "url_ins2",
      "label": "URL images instagram 3",
      "default": "/collections/all"
    },

	{
      "type": "image_picker",
      "id": "img_ins4",
      "label": "Image Instagram 4",
	  "info": "330 x 330px recommended"
    },
	{
      "type": "url",
      "id": "url_ins4",
      "label": "URL images instagram 4",
      "default": "/collections/all"
    },
	{
      "type": "image_picker",
      "id": "img_ins5",
      "label": "Image Instagram 5",
	  "info": "330 x 330px recommended"
    },
	{
      "type": "url",
      "id": "url_ins5",
      "label": "URL images instagram 5",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "section_title_item",
      "label": "Title item",
      "default": "Shop it"
    },
	
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "presets": [
    {
      "name": "Section Intagram v4",
      "category": "HOME 5"
    }
  ]
}
