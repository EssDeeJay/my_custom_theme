<div data-section-id="{{ section.id }}" data-section-type="section-banner-v6" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="ds-banner-v6">
    <div class="container container-v2">
      <div class="row">        
        <div class="col-md-4 ">
          <div class="box-info1 text-md-left text-center">
            <div class="box-img-one">
              {% if section.settings.img_banner1 != blank %}
              <a href="{{section.settings.url_banner1}}"><img class="img-1" src="{{section.settings.img_banner1 | img_url:'master'}}" class="img-fluid"></a>
              {% else %}
                <a href="{{section.settings.url_banner1}}"><img class="img-1"  src="//placehold.it/392x453" class="img-fluid" alt=""></a>
              {% endif %}
              
                <div class="content-banner">
                  <div class="list-inline info-bottom"> 
                    {% if section.settings.button_1 != blank %}
                    <a href="{{section.settings.url_button1}}" class="button-shop1 list-inline-item">{{section.settings.button_1}}</a>
                    {% endif %}
                  </div>
                </div>
            </div> 
          </div>
        </div>
        
        <div class="col-md-4">
          <div class="box-info2 text-center ">
            <div class="sub-img">
              {% if section.settings.sub_img != blank %}
              <a href="{{section.settings.url_banner2}}"><img src="{{section.settings.sub_img | img_url:'master'}}" class="img-fluid"></a>
              {% else %}
                <a href=""><img src="//placehold.it/178x155" class="img-fluid" alt=""></a>
              {% endif %}
            </div>
            
            
            <div class="box-img-one">
              {% if section.settings.img_banner2 != blank %}
              <a href="{{section.settings.url_banner2}}"><img class="img-2" src="{{section.settings.img_banner2 | img_url:'master'}}" class="img-fluid"></a>
              {% else %}
              <a href="{{section.settings.url_banner2}}"><img class="img-2"  src="//placehold.it/450x517" class="img-fluid" alt=""></a>
              {% endif %}

              <div class="content-banner">
                {% if section.settings.title_2 != blank %}
                <h3 class="title mb-0">{{section.settings.title_2}}</h3>
                {% endif %}

                <div class="list-inline info-bottom"> 
                  {% if section.settings.button_2 != blank %}
                  <a href="{{section.settings.url_button2}}" class="button-shop1 list-inline-item">{{section.settings.button_2}}</a>
                  {% endif %}
                </div>
              </div>
            </div>
            
            
          </div>
        </div>
        
        <div class="col-md-4">
          <div class="box-info3 text-md-right text-center">
            <div class="box-img-one">
              {% if section.settings.img_banner3 != blank %}
              <a href="{{section.settings.url_banner3}}"><img class="img-3" src="{{section.settings.img_banner3 | img_url:'master'}}" class="img-fluid"></a>
              {% else %}
                <a href="{{section.settings.url_banner3}}"><img class="img-3" src="//placehold.it/392x453" class="img-fluid" alt=""></a>
              {% endif %}
              <div class="content-banner">
                <div class="list-inline info-bottom"> 
                  {% if section.settings.button_3 != blank %}
                  <a href="{{section.settings.url_button3}}" class="button-shop1 list-inline-item">{{section.settings.button_3}}</a>
                  {% endif %}
                </div>
              </div>
            </div>
            
            
            
          </div>
        </div>
        
      </div>
    </div>
  </div>
</div>
