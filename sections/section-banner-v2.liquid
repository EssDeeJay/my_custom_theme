<div data-section-id="{{ section.id }}" data-section-type="section-banner-v2" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="ds-collection-v1" style="background: {{section.settings.bg_collection}}">
    <div class="container container-v2">
      <div class="row js_ds_collectionv1">
        {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
        {% if block.type == 'collection' %}
        <div class="col-12 ">
          <div class="box-info">
            <a href="{{block.settings.brand_url}}">
              {% if block.settings.brand_img != blank %}
              <img src="{{block.settings.brand_img|img_url:'master'}}" class="img-fluid" alt="bland">
              {% else %}
              <img src="//placehold.it/450x675" class="img-fluid" alt="bland">
              {% endif %}
            </a>
            <div class="box-content">
              <a href="{{block.settings.banner_url}}">{{block.settings.text_btn}}</a>
            </div>
          </div>
          <div class="text-center title">
            <a style="color:{{block.settings.color_title}} " href="{{block.settings.banner_url}}" class="">{{block.settings.title}}</a>
          </div> 
        </div>
          {% endif %}
          {% endfor %}
          {% endif %} 
        
      </div> 
    </div>
  </div>
</div>
{% schema %}
  {
  "name": "Section Banner v2",
  "class": "index-section",
  "settings": [
	{
      "type": "color",
      "id": "bg_collection",
      "label": "Background Color Section",
      "default": "#f4f4f4"
    },
	{
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "image_picker",
          "id": "brand_img",
          "info": "450 x 675px recommended",
          "label": "Brand 1"
        },
        {
          "type": "url",
          "id": "brand_url",
          "label": "URL brand ",
          "default": "/collections/all"
        },
		{
          "type": "text",
          "id": "text_btn",
          "label": "Text Button",
          "default": "Shop Now"
    	},
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Summer Beauty"
        },
        {
        "type": "color",
        "id": "color_title",
        "label": "Color Title"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Section Banner v2",
      "category": "HOME 2",
	  "blocks": [
        {
          "type": "collection",
          "settings": {
          }
        },
        {
          "type": "collection",
          "settings": {
          }
        },
        {
          "type": "collection",
          "settings": {
          }
        }
      ]
    }
  ]
}
{% endschema %}


