<div data-section-id="{{ section.id }}" data-section-type="section-product-v6" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="ds-product-v6">
    <div class="container container-v2">
      <div class="title_ds_prodv5 text-center">
        {% if section.settings.title_section_product != blank%}      
        <h3 class="mb-0">{{section.settings.title_section_product}}</h3>      
        {% endif %}
        
        <p class="big_title mb-0">{{section.settings.big_title}}</p>
      </div>      
      <div class=" product_new">
          <div class="row ">    
            {% assign products_limit = section.settings.products_limit %}
            {% assign col = section.settings.select_collection %}
            {% for product in collections[col].products limit: products_limit %}
            <div class="col-lg-3 col-md-4 mb-3 col-6 product_item">
              {% include 'product-item-v1' %}
            </div>
            {% else %}
            {% for i in (1..12) %}
            <div class="col-lg-3 col-md-4 mb-3 col-6 product_item">
              {% include 'empty-product-item' %}
            </div>
            {% endfor %}
            {% endfor %}
          </div>
        
        <div class="text-center">
          <a class="button-shop" href="{{section.settings.url_btn_shop}}">{{section.settings.btn_shop}}</a>
        </div>
        
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Section Product v6",
  "settings": [
	{
      "type": "text",
      "id": "title_section_product",
      "label": "Title section Product",
      "default": "#newarrival"
    },
	{
      "type": "text",
      "id": "big_title",
      "label": "Big Title",
      "default": "Collection"
    },
	{
      "type": "header",
      "content": "Info Product"
    },
    {
      "type": "collection",
      "id": "select_collection",
      "label": "Select Collection"
    },
	{
      "type": "range",
      "id": "products_limit",
      "label": "Limit products",
      "min": 2,
      "max": 50,
      "step": 1,
      "default": 16
    },
	{
      "type": "url",
      "id": "url_btn_shop",
      "label": "URL Button"
    },
	{
      "type": "text",
      "id": "btn_shop",
      "label": "Text Button",
      "default": "Load more"
    },
		
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "presets": [
    {
      "name": "Section Product v6",
      "category": "HOME 7"
    }
  ]
}
{% endschema %}