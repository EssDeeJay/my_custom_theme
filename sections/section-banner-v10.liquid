<div data-section-id="{{ section.id }}" data-section-type="section-banner-v10" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="ds-banner-v10">
    <div class="">
      <div class="d-md-flex">        
          <div class="box-info">
            <div class="box-img-one">
              {% if section.settings.img_banner1 != blank %}
              <a href="{{section.settings.url_banner1}}"><img class="w-100" src="{{section.settings.img_banner1 | img_url:'master'}}" class="img-fluid"></a>
              {% else %}
                <a href="{{section.settings.url_banner1}}"><img class="w-100" src="//placehold.it/960x500" class="img-fluid" alt=""></a>
              {% endif %}
            </div>
            
            <div class="content-banner1">
              {% if section.settings.title_1 != blank %}
              <h3 class="title mb-0">{{section.settings.title_1}}</h3>
              {% endif %}

              <div class="list-inline info-bottom"> 
                {% if section.settings.button_1 != blank %}
                <a href="{{section.settings.url_button1}}" class="button-shop list-inline-item mr-0">{{section.settings.button_1}}</a>
                {% endif %}
              </div>
            </div>
            
          </div>

        
        
          <div class="box-info">
            <div class="box-img-one">
              {% if section.settings.img_banner2 != blank %}
              <a href="{{section.settings.url_banner2}}"><img class="w-100" src="{{section.settings.img_banner2 | img_url:'master'}}" class="img-fluid"></a>
              {% else %}
                <a href="{{section.settings.url_banner1}}"><img class="w-100" src="//placehold.it/960x500" class="img-fluid" alt=""></a>
              {% endif %}
            </div>
            
            <div class="content-banner2">
              {% if section.settings.title_2 != blank %}
              <h3 class="title mb-0">{{section.settings.title_2}}</h3>
              {% endif %}

              <div class="list-inline info-bottom"> 
                {% if section.settings.button_2 != blank %}
                <a href="{{section.settings.url_button2}}" class="button-shop list-inline-item mr-0">{{section.settings.button_2}}</a>
                {% endif %}
              </div>
            </div>
            
          </div>

        
      </div>
    </div>
  </div>
</div>
